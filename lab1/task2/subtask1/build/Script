#!/bin/bash

echo "==================================="
echo "Сборка статической библиотеки и программы"
echo "==================================="

# 1. Компиляция
gcc -c ../static_lib.c -o static_lib.o

# 2. Создание библиотеки
ar rcs libstatic.a static_lib.o

# 3. Компиляция программы
gcc ../main.c -L. -lstatic -o program

# 4. Запуск
./program
